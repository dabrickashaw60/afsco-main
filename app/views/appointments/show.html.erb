<h2>Appointment Details</h2>

<p>
  <strong>Title:</strong>
  <%= @appointment.title %>
</p>

<p>
  <strong>Location:</strong>
  <%= @appointment.location %>
</p>

<p>
  <strong>Start Time:</strong>
  <%= @appointment.start_time.strftime("%m/%d/%Y %I:%M %p") %>
</p>

<p>
  <strong>End Time:</strong>
  <%= @appointment.end_time.strftime("%m/%d/%Y %I:%M %p") %>
</p>

<p>Created by: <%= @appointment.user.name %></p>

<%= link_to 'Back', root_path, class: 'btn btn-secondary' %> - 
<%= form_with(url: appointment_path(@appointment), method: :delete, local: true) do |form| %>
<% if @appointment.user == current_user %>
  <%= form.submit "Delete", data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
<% end %>
    <% end %>
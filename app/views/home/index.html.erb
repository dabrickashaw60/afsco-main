<div class="row">
  <div class="col-md-9">
    <div class="calendar-navigation">
      <% if @view_type == 'weekly' %>
        <%= link_to '<', home_path(week: (@current_week == 1 ? 52 : @current_week - 1), year: (@current_week == 1 ? @current_year - 1 : @current_year), view: 'weekly'), class: 'nav-arrow' %>
        <div class="current-week">
          Week <%= @current_week %>, <%= @current_year %>
        </div>
        <%= link_to '>', home_path(week: (@current_week == 52 ? 1 : @current_week + 1), year: (@current_week == 52 ? @current_year + 1 : @current_year), view: 'weekly'), class: 'nav-arrow' %>
      <% else %>
        <%= link_to '<', home_path(month: (@current_month == 1 ? 12 : @current_month - 1), year: (@current_month == 1 ? @current_year - 1 : @current_year), view: 'monthly'), class: 'nav-arrow' %>
        <div class="current-month">
          <%= Date.new(@current_year, @current_month).strftime('%B %Y') %>
        </div>
        <%= link_to '>', home_path(month: (@current_month == 12 ? 1 : @current_month + 1), year: (@current_month == 12 ? @current_year + 1 : @current_year), view: 'monthly'), class: 'nav-arrow' %>
      <% end %>
      <%= link_to 'Toggle View', home_path(view: @view_type == 'monthly' ? 'weekly' : 'monthly'), class: 'btn btn-secondary' %>
      <%= link_to 'Installer Calendar', installer_calendar_path, class: 'btn btn-secondary' %>
    </div>

    <% if @view_type == 'weekly' %>
      <div class="calendar">
        <div class="calendar-header">
          <% %w[Mon Tue Wed Thu Fri Sat].each do |day| %>
            <div class="calendar-day"><%= day %></div>
          <% end %>
        </div>
        <div class="calendar-body">
          <div class="calendar-week">
            <% (0..5).each do |day_offset| %>
              <% day = @start_date + day_offset.days %>
              <% day_class = day.today? ? 'today' : '' %>
              <div class="calendar-day-block <%= day_class %>" style="height: 1000px;" data-date="<%= day.to_s %>">
                <div class="calendar-day-number"><%= day.day %></div>
                <% @appointments = Appointment.where(start_time: day.beginning_of_day..day.end_of_day) %>
                <% @appointments.each do |appointment| %>
                  <div class="appointment">
                    <p>Salesman: <%= appointment.user.name %></p>
                    <strong><%= link_to appointment.title, appointment_path(appointment) %></strong>
                    <p><%= link_to appointment.location, "https://www.google.com/maps/search/?api=1&query=#{CGI.escape(appointment.location)}", target: "_blank" %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="calendar">
        <div class="calendar-header">
          <% %w[Mon Tue Wed Thu Fri Sat].each do |day| %>
            <div class="calendar-day"><%= day %></div>
          <% end %>
        </div>
        <div class="calendar-body">
          <% first_day_of_month = Date.new(@current_year, @current_month, 1) %>
          <% start_date = first_day_of_month.beginning_of_week(:monday) %>
          <% end_date = Date.new(@current_year, @current_month, -1) %>
          <% (start_date..end_date).to_a.each_slice(7) do |week| %>
            <div class="calendar-week">
              <% week.each do |day| %>
                <% next if day.sunday? %> <!-- Skip Sundays -->
                <% day_class = day.today? ? 'today' : '' %>
                <div class="calendar-day-block <%= day_class %>" data-date="<%= day.to_s %>">
                  <div class="calendar-day-number"><%= day.day %></div>
                  <% @appointments = Appointment.where(start_time: day.beginning_of_day..day.end_of_day) %>
                  <% @appointments.each do |appointment| %>
                    <div class="appointment">
                      <p>Salesman: <%= appointment.user.name %></p>
                      <strong><%= link_to appointment.title, appointment_path(appointment) %></strong>
                      <p><%= link_to appointment.location, "https://www.google.com/maps/search/?api=1&query=#{CGI.escape(appointment.location)}", target: "_blank" %></p>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div id="new-appointment-modal" style="display:none;">
    <div class="modal-content">
      <span class="close-button" onclick="closeNewAppointmentModal()">&times;</span>
      <h3>New Appointment</h3>
      <%= form_with(model: @appointment, url: appointments_path, method: :post, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :title, "Appointment Title" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :location, "Location" %>
          <%= form.text_field :location, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :start_time, "Start Time" %>
          <%= form.datetime_local_field :start_time, class: "form-control", id: "start-time-field" %>
        </div>
        <div class="form-group">
          <%= form.label :end_time, "End Time" %>
          <%= form.datetime_local_field :end_time, class: "form-control", id: "end-time-field" %>
        </div>
        <div class="form-group">
          <%= form.label :user_id, "Salesman" %>
          <%= form.collection_select :user_id, User.all, :id, :name, prompt: "Select Salesman", class: "form-control" %>
        </div>
        <div class="actions">
          <%= form.submit "Create Appointment", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-3">
    <%= render 'appointments/appointments_sidebar' %>
  </div>
</div>

<script>
  function openNewAppointmentModal(date) {
    document.getElementById('start-time-field').value = date + "T09:00"; // Default start time
    document.getElementById('end-time-field').value = date + "T10:00"; // Default end time
    document.getElementById('new-appointment-modal').style.display = 'block';
  }

  function closeNewAppointmentModal() {
    document.getElementById('new-appointment-modal').style.display = 'none';
  }

  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.calendar-day-block').forEach(function (element) {
      element.addEventListener('click', function () {
        const date = element.getAttribute('data-date');
        openNewAppointmentModal(date);
      });
    });
  });
</script>
